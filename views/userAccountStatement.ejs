<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Account Statement</title>

    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/css/headerlogin.css" />
    <link rel="stylesheet" href="/css/bets.css" />
    <link rel="stylesheet" href="/css/slider.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/dateTimemodal.css">
     <link rel="stylesheet" href="/css/accountStatement.css">

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/rendomsidebar.js"></script>
    <script src="/js/footer.js"></script>
    <script src="/js/betshistry.js"></script>

  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>

<!-- ================= HEADER ================= -->
<%- include('partials/header') %>
<div class="header"></div>

<!-- ================= FILTER ================= -->
<div class="form-container">

  <select class="custom-input text-gray-600" id="dataSource">
    <option value="" disabled <%= !source ? "selected" : "" %>>Data Source</option>
    <option value="live"   <%= source === "live" ? "selected" : "" %>>Live Data (24H)</option>
    <option value="backup" <%= source === "backup" ? "selected" : "" %>>Last 7 Days</option>
    <option value="old"    <%= source === "old" ? "selected" : "" %>>Last 30 Days</option>
  </select>

  <input type="date" class="custom-input" id="startDate"
    data-placeholder="Start Date"
    value="<%= start || '' %>">

  <input type="date" class="custom-input" id="endDate"
    data-placeholder="End Date"
    value="<%= end || '' %>">

  <button class="btn-history" onclick="getHistory()">Get History</button>
</div>

<!-- ================= TABLE ================= -->
<div class="bbody">
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Date & Time</th>
          <th>Deposit</th>
          <th>Withdrawal</th>
          <th>Balance</th>
          <th>Transaction</th>
        </tr>
      </thead>

      <tbody>
        <% if (history.length === 0) { %>
          <tr>
            <td colspan="5" style="text-align:center;">No records found</td>
          </tr>
        <% } %>

        <% history.forEach(h => { %>
          <tr>
            <td>
              <%= h.formattedDate %> &nbsp; <%= h.formattedTime %>
            </td>

            <% if (h.type === "deposit") { %>
              <td style="color:green;">₹<%= h.amount %></td>
              <td>₹0</td>
            <% } else { %>
              <td>₹0</td>
              <td style="color:red;">-₹<%= h.amount %></td>
            <% } %>

            <td>₹<%= h.userWalletAfter %></td>

            <td>
              <% if (h.type === "deposit") { %>
                Upline → You
              <% } else { %>
                You → Upline
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- ================= FOOTER ================= -->
  <%- include('partials/footer') %>

<!-- ================= SCRIPTS ================= -->
<script>
function getHistory() {
  const dataSource = document.getElementById("dataSource").value;
  const start = document.getElementById("startDate").value;
  const end = document.getElementById("endDate").value;

  const params = new URLSearchParams();

  // Manual dates win
  if (start && end) {
    params.set("start", start);
    params.set("end", end);
  }
  else if (dataSource) {
    params.set("source", dataSource);
  }

  window.location.href = `/useraccountstatement?${params.toString()}`;
}
</script>

<script>
document.querySelectorAll('input[type="date"]').forEach(input => {
  function update() {
    if (input.value) input.classList.add('has-value');
    else input.classList.remove('has-value');
  }
  update();
  input.addEventListener('change', update);
});
</script>

<script>
document.getElementById("dataSource").addEventListener("change", () => {
  document.getElementById("startDate").value = "";
  document.getElementById("endDate").value = "";
});
</script>

</body>
</html>
