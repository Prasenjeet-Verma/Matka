<!-- ============================================================================ Add Agent Modal ========================================== -->


  

  <!-- Modal Overlay -->
  <div class="modal-overlay" id="userModal" aria-hidden="true">
    <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
      <!-- Header -->
      <div class="modal-header" style="background-color: white;">
        <h2 id="modalTitle">Add Agent</h2>
        <button class="close-btn" id="closeModalBtn" aria-label="Close modal">&times;</button>
      </div>

      <!-- Form Content -->
      <div class="form-content">
        <div class="form-row">
          <label for="username">Username <span class="required-star">*</span></label>
          <input type="text" id="username" autocomplete="username" />
        </div>

        <div class="form-row  input-group" style="display: flex;">
            
          <label for="password">Password <span class="required-star">*</span></label>
          <i class="fas fa-eye toggle-password" data-target="password"></i>
          <input type="password" id="password" autocomplete="new-password" />
        </div>

        <div class="form-row   input-group">
          <label for="confirm-password">Confirm Password <span class="required-star">*</span></label>
          <i class="fas fa-eye toggle-password" data-target="confirm-password"></i>
          <input type="password" id="confirm-password" autocomplete="new-password" />
        </div>

        <div class="form-row">
          <label for="exposure">Credit Ref<span class="required-star">*</span></label>
          <input type="number" id="exposure" value="0" min="0" />
        </div>
      </div>

      <!-- Footer -->
      <div class="modal-footer">
        <button type="button" class="create-btn" id="createBtn">Create</button>
      </div>
    </div>
  </div>


