<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matka  69</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/indexbody.css">
    <link rel="stylesheet" href="/style.css" />

    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>


    <!-- ==================================================Header======================================= -->






    <!-- ===================================================Body Start================================================= -->



    
   

<div class="contaner" style="display: flex; justify-content: center; position: relative; top: 1rem;">

    <!-- Main Card Container -->
    <!-- Removed max-w-sm to allow it to grow. Set w-full for fluid width. -->
    <div class="in1contaner" id="tracker-card" style="width: 95%; border: 2px solid white; border-radius: 20px;">
        
        <!-- Header Section -->
   <!-- =================== Today Section =================== -->
<div class="bg-white/90 p-6 text-center rounded-t-xl shadow-lg">
  <h1 class="text-3xl font-extrabold text-red-600 tracking-wider">Today</h1>
</div>
<div class="p-8 sm:p-10">
  <div class="grid grid-cols-4 gap-6 sm:gap-8 text-center">
    <% todayResults.forEach(result => { %>
      <div class="flex flex-col items-center">
        <p class="text-lg font-medium text-white mb-4">
          <%= new Date(result.declaredAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
        </p>
        <div class="score-circle w-16 h-16 sm:w-24 sm:h-24 bg-white rounded-full flex items-center justify-center text-4xl font-extrabold text-red-600 mb-5 cursor-pointer border-4 border-red-200">
          <%= result.winningNumber %>
        </div>
        <div class="bg-white/90 w-full rounded-lg py-2 text-base font-semibold text-gray-800 shadow-xl transition hover:shadow-2xl hover:scale-[1.02] duration-300">
          <%= result.matkaNo %> - <%= result.gameName %>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- =================== Yesterday Section =================== -->
<div class="bg-white/90 p-6 text-center rounded-t-xl shadow-lg">
  <h1 class="text-3xl font-extrabold text-red-600 tracking-wider">Yesterday</h1>
  <% if (yesterdayResults.length) { %>
    <p class="text-sm text-gray-300">
      <%= new Date(yesterdayResults[0].declaredAt).toLocaleDateString('en-GB') %>
    </p>
  <% } %>
</div>
<div class="p-8 sm:p-10">
  <div class="grid grid-cols-4 gap-6 sm:gap-8 text-center">
    <% yesterdayResults.forEach(result => { %>
      <div class="flex flex-col items-center">
        <p class="text-lg font-medium text-white mb-4">
          <%= new Date(result.declaredAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
        </p>
        <div class="score-circle w-16 h-16 sm:w-24 sm:h-24 bg-white rounded-full flex items-center justify-center text-4xl font-extrabold text-red-600 mb-5 cursor-pointer border-4 border-red-200">
          <%= result.winningNumber %>
        </div>
        <div class="bg-white/90 w-full rounded-lg py-2 text-base font-semibold text-gray-800 shadow-xl transition hover:shadow-2xl hover:scale-[1.02] duration-300">
          <%= result.matkaNo %> - <%= result.gameName %>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- =================== History / Older Results =================== -->
<div class="bg-white/90 p-6 text-center rounded-t-xl shadow-lg mt-8">
  <h1 class="text-3xl font-extrabold text-red-600 tracking-wider">History</h1>
</div>
<div class="p-8 sm:p-10">
  <div class="grid grid-cols-4 gap-6 sm:gap-8 text-center">
    <% historyResults.forEach(result => { %>
      <div class="flex flex-col items-center">
        <p class="text-lg text-gray-300 mb-4">
          <%= new Date(result.declaredAt).toLocaleDateString('en-GB') %>
        </p>
        <div class="score-circle w-16 h-16 sm:w-24 sm:h-24 bg-white rounded-full flex items-center justify-center text-4xl font-extrabold text-red-600 mb-5 cursor-pointer border-4 border-red-200">
          <%= result.winningNumber %>
        </div>
        <div class="bg-white/90 w-full rounded-lg py-2 text-base font-semibold text-gray-800 shadow-xl transition hover:shadow-2xl hover:scale-[1.02] duration-300">
          <%= result.matkaNo %> - <%= result.gameName %>
        </div>
      </div>
    <% }) %>
  </div>
</div>


</body>
</html>






