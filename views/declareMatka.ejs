<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matka 69</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />

    <link rel="stylesheet" href="css/headerlogin.css" />
    <link rel="stylesheet" href="css/footer.css" />
    <link rel="stylesheet" href="css/declare.css" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="js/rendomsidebar.js"></script>
    <script src="js/betbox.js"></script>
    <script src="js/footer.js"></script>
  </head>
  <body>
    <!-- ==================================================Header======================================= -->

   
   <%- include('partials/header') %>
    <!-- ======================================================= Body is here ============================================== -->


    <!-- SINGLE GAME -->
<div class="bmain">
  <div class="main">
    <div class="patti-bar" style="margin-bottom: 1rem">SINGLE</div>

    <!-- First Row (1 - 5) -->
    <div class="row">
      <% for (let i = 1; i <= 5; i++) { %>
        <div class="box">
          <div class="number-box"><%= i %></div>
          <div class="price-box">
             <%= single[i]?.totalAmount || 0 %>
          </div>
          <div class="user-box">
            U: <%= single[i]?.usersCount || 0 %>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Second Row (6 - 9 + 0) -->
    <div class="row">
      <% for (let i = 6; i <= 9; i++) { %>
        <div class="box">
          <div class="number-box"><%= i %></div>
          <div class="price-box">
            <%= single[i]?.totalAmount || 0 %>
          </div>
          <div class="user-box">
            U: <%= single[i]?.usersCount || 0 %>
          </div>
        </div>
      <% } %>

      <!-- 0 -->
      <div class="box">
        <div class="number-box">0</div>
        <div class="price-box">
           <%= single['0']?.totalAmount || 0 %>
        </div>
        <div class="user-box">
          U: <%= single['0']?.usersCount || 0 %>
        </div>
      </div>
    </div>
  </div>
</div>


        <div class="val">
          <div class="form-container">
            <input type="text" placeholder="Single Patti..." required />
            <button class="btno">Submit</button>
          </div>
        </div>
      </div>


<div class="nnn" style="
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    border: 1px solid white;
    margin-bottom: 1rem;
    color: white;
    background-color: red;
"><div style="
    color: white;
    font-size: xx-large;
    font-weight: bolder;
">Patti</div></div>

<!-- PATTI GAME SECTION -->
<div class="aa">
  <div class="patti-container">

    <!-- Top Under Numbers -->
   <div class="patti-under-row">
  <% const order = ["1","2","3","4","5","6","7","8","9","0"]; %>
  <% order.forEach(u => { %>
    <div class="patti-under-box"><%= u %></div>
  <% }) %>
</div>

<div class="patti-grid">
  <% order.forEach(under => { %>
    <div class="patti-col">
      <% if (patti[under]) { %>
        <% Object.keys(patti[under].numbers).forEach(num => { %>

          <div class="patti-item">
            <div class="patti-num"><%= num %></div>

            <div class="patti-amt">
               <%= patti[under].numbers[num].totalAmount %>
            </div>

            <div class="patti-users">
              U: <%= patti[under].numbers[num].usersCount %>
            </div>
          </div>

        <% }) %>
      <% } else { %>
        <div class="patti-empty">â€”</div>
      <% } %>
    </div>
  <% }) %>
</div>

    <!-- Patti Input -->
    <div class="val">
      <div class="form-container">
        <form action="/declare">
          <input type="text" placeholder="Single Patti..." required />
          <button class="btno">Submit</button>
        </form>
      </div>
    </div>

  </div>
</div>


    <!-- =================================== Footer Start ============================== -->
<%- include('partials/adminFooter') %>

    <!-- =================================== Footer End ============================== -->
  </body>


</html>
