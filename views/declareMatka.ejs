<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matka 69</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />

    <link rel="stylesheet" href="css/headerlogin.css" />
    <link rel="stylesheet" href="css/footer.css" />
    <link rel="stylesheet" href="css/declare.css" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="js/rendomsidebar.js"></script>
    <script src="js/betbox.js"></script>
    <script src="js/footer.js"></script>
  </head>
  <body>
    <!-- ==================================================Header======================================= -->

    <%- include('partials/header') %>
    <!-- ======================================================= Body is here ============================================== -->

    <!-- SINGLE GAME -->
    <% Object.keys(single).forEach(matkaNo => { %>

    <div class="bmain">
      <div class="main">
        <div class="patti-bar" style="margin-bottom: 1rem">
          SINGLE — <%= matkaNo %>
        </div>

        <!-- First Row 1-5 -->
        <div class="row">
          <% for (let i = 1; i <= 5; i++) { %>
          <div class="box">
            <div class="number-box"><%= i %></div>
            <div class="price-box">
              <%= single[matkaNo][i]?.totalAmount || 0 %>
            </div>
            <div class="user-box">
              U: <%= single[matkaNo][i]?.usersCount || 0 %>
            </div>
          </div>
          <% } %>
        </div>

        <!-- Second Row 6-9 + 0 -->
        <div class="row">
          <% for (let i = 6; i <= 9; i++) { %>
          <div class="box">
            <div class="number-box"><%= i %></div>
            <div class="price-box">
              <%= single[matkaNo][i]?.totalAmount || 0 %>
            </div>
            <div class="user-box">
              U: <%= single[matkaNo][i]?.usersCount || 0 %>
            </div>
          </div>
          <% } %>

          <!-- Zero -->
          <div class="box">
            <div class="number-box">0</div>
            <div class="price-box">
              <%= single[matkaNo]['0']?.totalAmount || 0 %>
            </div>
            <div class="user-box">
              U: <%= single[matkaNo]['0']?.usersCount || 0 %>
            </div>
          </div>
        </div>
      </div>
    </div>

<div class="val">
  <div class="form-container">
    <form action="/declareSingle" method="POST">
      <input type="hidden" name="matkaNo" value="<%= matkaNo %>" />
      <input type="text" name="singleResult" placeholder="Single Patti..." required />
      <button type="submit" class="btno">Submit</button>
    </form>
  </div>
</div>


    <% }) %> 
    
    <% Object.keys(patti).forEach(matkaNo => { %>
    <div
      class="nnn"
      style="
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50px;
        border: 1px solid white;
        margin-bottom: 1rem;
        color: white;
        background-color: red;
      "
    >
      <div style="color: white; font-size: xx-large; font-weight: bolder">
        PATTI — <%= matkaNo %>
      </div>
    </div>

    <div class="aa">
      <div class="patti-container">
        <!-- Top Under Numbers -->
        <div class="patti-under-row">
          <% const order = ["1","2","3","4","5","6","7","8","9","0"]; %> <%
          order.forEach(u => { %>
          <div class="patti-under-box"><%= u %></div>
          <% }) %>
        </div>

        <div class="patti-grid">
          <% order.forEach(under => { %>
          <div class="patti-col">
            <% if (patti[matkaNo].underNumbers[under]) { %> <%
            Object.keys(patti[matkaNo].underNumbers[under]).forEach(num => { %>
            <div class="patti-item">
              <div class="patti-num"><%= num %></div>
              <div class="patti-amt">
                <%= patti[matkaNo].underNumbers[under][num].totalAmount %>
              </div>
              <div class="patti-users">
                U: <%= patti[matkaNo].underNumbers[under][num].usersCount %>
              </div>
            </div>
            <% }) %> <% } else { %>
            <div class="patti-empty">No Bet</div>
            <% } %>
          </div>
          <% }) %>
        </div>

        <!-- Patti Input -->
<div class="val">
  <div class="form-container">
    <form action="/declarePatti" method="POST">
      <input type="hidden" name="matkaNo" value="<%= matkaNo %>" />
      <input type="text" name="pattiResult" placeholder="Patti" required />
      <button type="submit" class="btno">Submit</button>
    </form>
  </div>
</div>

    <% }) %>

    <!-- =================================== Footer Start ============================== -->
    <%- include('partials/adminFooter') %>

    <!-- =================================== Footer End ============================== -->
  </body>
</html>
